<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WellnessMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- This keeps the blue status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- This keeps the navigation bar color -->
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <!-- These ensure no action bar is shown -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Set light status bar content for better contrast -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Adjust window for keyboard -->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Custom Card Style -->
    <style name="AppCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/accent_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="strokeColor">@color/accent_color</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="AppTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SectionTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>